<h1>Listing feeds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Type</th>
    <th>Active</th>
    <th>In stream</th>
  </tr>

<% @feeds.each do |feed| %>
  <tr>
    <td><%=h feed.name %></td>
    <td><%=h feed.url %></td>
    <td><%=h feed.type %></td>
    <td><%=h feed.active %></td>
    <td><%=h feed.in_stream %></td>
    <td><%= link_to 'Show', feed %></td>
    <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
    <td><%= link_to 'Destroy', feed, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New feed', new_feed_path %>